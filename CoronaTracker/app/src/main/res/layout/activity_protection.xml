<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProtectionActivity">
    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:onClick="back"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/arrow"/>
    <TextView
        android:id="@+id/HometextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Protection"
        android:textColor="#000"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@+id/HometextView"
        android:layout_marginTop="16dp"
        android:background="#cbaacb"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:paddingTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"
        android:onClick="click1"
        android:layout_marginEnd="15dp"
        android:text="Basic protective measures against the new coronavirus" />
    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        android:layout_marginTop="16dp"
        android:background="#55cbcd"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:paddingTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"
        android:onClick="click2"
        android:layout_marginEnd="15dp"
        android:text="Guidance for workplaces and schools" />
    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        android:layout_marginTop="16dp"
        android:background="#ff968a"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:paddingTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"
        android:onClick="click3"
        android:layout_marginEnd="15dp"
        android:text="Protection measures for persons who are in or have
recently visited (past 14 days) areas where COVID-19 is
spreading" />
    <TextView
        android:id="@+id/tv4"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/tv3"
        android:layout_marginTop="16dp"
        android:background="#3fc380"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:paddingTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="click4"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="Other tips" />
</androidx.constraintlayout.widget.ConstraintLayout>